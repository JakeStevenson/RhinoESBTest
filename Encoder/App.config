<?xml version="1.0" encoding="utf-8" ?>
<!--ENCODER-->
<configuration>
  <configSections>
    <section name="castle"
             type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  <appSettings>
    <add key="encoderQueue" value="msmq://localhost/videotoencode"/>
  </appSettings>
  <castle>
    <facilities>
      <facility id="worker.esb" >
        <bus threadCount="1"
             numberOfRetries="5"
             endpoint="msmq://localhost/videotoencode"
             queueIsolationLevel="ReadCommitted"
           />
        <messages>
          <add name="RhinoESBTest.Core.Messages.VideoToEncode"
               endpoint="msmq://localhost/videotoencode"
             />
        </messages>
      </facility>
    </facilities>
  </castle>
  <log4net>
    <appender name="OutputDebugStringAppender" type="log4net.Appender.OutputDebugStringAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="ENC: %-5level %logger [%property{BusName}] %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="OutputDebugStringAppender" />
    </root>
  </log4net>
  
</configuration>